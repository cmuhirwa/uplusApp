<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="#007569"
    tools:context="info.androidhive.uplus.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">

          <android.support.v7.widget.CardView
              android:id="@+id/cardError"
              android:layout_width="match_parent"
              android:padding="20dp"
              android:layout_marginBottom="10dp"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/txtError"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginLeft="10dp"
                  android:text="No Internet connection !"
                  android:textColor="#D95145"
                  android:textSize="20sp"

                  />
          </android.support.v7.widget.CardView>
          <!-- A CardView that contains a TextView -->
          <android.support.v7.widget.CardView
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:id="@+id/card_view"
              android:layout_gravity="center"
              android:minHeight="200dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              card_view:cardCornerRadius="10dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  >

                  <ImageView
                      android:id="@+id/imageView2"
                      android:layout_width="match_parent"
                      android:layout_height="100dp"
                      android:src="@mipmap/updatedlogo"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Log into uPlus"
                      android:textColor="#313131"
                      android:textSize="20sp"
                      android:textAlignment="center"
                      />

                  <EditText
                      android:id="@+id/txtPhone"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:minHeight="30dp"
                      android:inputType="phone"
                      android:hint="Enter Phone: 07xxxxxxxxx"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:paddingLeft="10dp"
                      android:background="@drawable/round"
                      android:layout_marginBottom="10dp"
                      />

                  <Button
                      android:id="@+id/btnLogin"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_marginBottom="20dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:background="#43A047"

                      android:text="Continue"
                      android:textColor="#fff"
                      android:textSize="15sp" />
              </LinearLayout>
          </android.support.v7.widget.CardView>
      </LinearLayout>
    </ScrollView>
</LinearLayout>
