<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4eade">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtGroupAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6F736F"
                android:text="Group limit: 10,000 FRW"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:background="#EFEFEF"
                android:padding="10dp"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:layout_gravity="center"
                android:text="Amount"
                />
            <EditText
                android:id="@+id/txtWithDrawAmount"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="number"
                android:textColor="#000"
                android:minWidth="120dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:hint="RWF"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:selectAllOnFocus="false" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Receiver account"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="#333"

            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spnWithdraw"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:minWidth="110dp"
                >

            </Spinner>
            <EditText
                android:id="@+id/txtWithDrawPhone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:minWidth="150dp"
                android:inputType="phone"
                android:background="@drawable/round"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="+2507********"
                android:textAlignment="center"
                android:textSize="18sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/withdrawBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009966"
            android:text="WITHDRAW"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="#DA5246"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>
